@model Kiralama

<form method="post">
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-5">

                <div class="row p-3">
                    <h2 class="text-primary">@(Model == null ? "Kiralama Oluştur" : "Kiralama Güncelle")</h2>
                    <hr />
                </div>

                <div class="mb-3">
                    <label asp-for="OgrenciId" class="p-0"></label>
                    <input asp-for="OgrenciId" class="form-control" />
                    <span asp-validation-for="OgrenciId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="KitapId" class="p-0"></label>
                    <select asp-for="KitapId" asp-items="ViewBag.KitapList"></select>
                </div>

                @if (Model != null)
                {
                    <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Kiralama Güncelle</button>
                }
                else
                {
                    <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Kiralama Ekle</button>
                }

                <a asp-controller="Kiralama" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">Geri Dön</a>

            </div>
        </div>

        <div class="col-2">
            @if (Model != null)
            {
                <br />
                <img src="@Model.Kitap.ResimUrl" width:"100%" style="border-radius: 7px; border: 1px solid #bbb9b9" />
                <!-- TODO: FrontEnd'de resimin tasarımını düzenlenmesi gerek.-->
            }
        </div>
    </div>
</form>
