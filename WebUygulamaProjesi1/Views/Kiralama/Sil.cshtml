@model Kiralama

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">Kiralama Sil</h2>
            <hr />
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="OgrenciId" class="p-0"></label>
        <input asp-for="OgrenciId" class="form-control" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="KitapId" class="p-0"></label>
        <input asp-for="KitapId" class="form-control" disabled />
    </div>

    <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Kiralama Sil</button>

    <a asp-controller="Kiralama" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">Kiralamaya Geri Dön</a>

</form>
