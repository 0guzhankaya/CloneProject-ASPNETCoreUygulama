@model KitapTuru

<form method="post">
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">Kitap Türü Ekle</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Ad" class="p-0"></label>
            <input asp-for="Ad" class="form-control" />
            <span asp-validation-for="Ad" class="text-danger"></span>
            <!--asp.net core özel : hangi alana validasyon verileceğini sorar. Hata mesajı vermeye yarar.
            Backend (Server - Side) Validation-->
        </div>

        <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Kitap Türü Ekle</button>
        <!--submit edildiğinde form'un method'u post olduğu için veriler, Controller'daki [HttpPost] attribute'lu Action'a gider.-->

        <a asp-controller="KitapTuru" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">
            Geri Dön
        </a>
    </div>

    @section Scripts {
        @{
            <partial name="_ValidationScriptsPartial"/>
        }
    }
</form>
